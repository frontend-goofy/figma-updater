{
  "compilerOptions": {
    "target": "ESNext",                        
    "module": "nodenext",                        
    "lib": ["ESNext", "DOM"],                  
    "moduleResolution": "NodeNext",            
    "outDir": "./dist",                        
    "rootDir": "./src",                        
    "strict": true,           
    "noImplicitAny": true,                 
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,  
    "resolveJsonModule": true,                 
    "isolatedModules": true,    
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": false,
  },
  "include": ["src"],
}